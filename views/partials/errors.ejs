<% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
   <div class="error-div">
      <div class="alert error" >
         <%= error.msg %>
         <button type="button" data-dismiss="alert" >
            <span >&times;</span>
         </button>
      </div>
      <% }); %> <% } %> <% if(success_msg != ''){ %>
      <div class="alert error" style="background: var(--green-color);">
         <%= success_msg %>
         <button type="button"  data-dismiss="alert" >
            <span >&times;</span>
         </button>
      </div>
      <% } %> <% if(error_msg != ''){ %>
      <div class="alert error" >
         <%= error_msg %>
         <button type="button"  data-dismiss="alert" >
            <span >&times;</span>
         </button>
      </div>
      <% } %> <% if(error != ''){ %>
      <div class="alert error" >
         <%= error %>
         <button type="button"  data-dismiss="alert" >
            <span >&times;</span>
         </button>
      </div>
   </div>
<% } %>