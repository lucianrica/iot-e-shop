   <link rel="stylesheet" href="/public/css/main.css" type="text/css">
   <link rel="stylesheet" href="/public/css/star-rating.css" type="text/css">
   <link rel="stylesheet" href="/public/css/admin-dashboard.css" type="text/css">


   <!-- Chart.js script -->
   <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.2/dist/Chart.min.js"></script>

