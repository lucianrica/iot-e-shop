</head>

<body>
   <div class="navbar">
      <a href="/"><img class="logo" src="/public/img/logo.PNG"></a>
      <div></div> 
      <div class="dropdown">
         <button class="dropbtn">Shop</button>
         <div class="dropdown-content">
            <a href="/">Home</a>
            <% if (user != undefined && user.userType === 1) { %>
            <a href="/items">Add Product</a>
            <a href="/users/<%= user.id %>/items">My Products</a>
            <% } %>
         </div>
      </div>

      <div class="dropdown">
         <% if (user) { %>
            <!-- IF USER -->
            <img class="dropbtn profile-photo"
               src="<%= user.profilePhoto != undefined ? loggedinUser.profilePhoto : '/public/img/profile-no-photo.png' %>" />
         <% } else { %>
            <!-- IF NO USER -->
            <button class="dropbtn">Account</button>
         <% } %>
         <div class="dropdown-content">
            <% if (user) { %>
            <!-- IF USER -->
            <a href="/users">dashboard</a>
            <a href="/logout">logout</a>
            <% } else { %>
            <!-- IF NO USER -->
            <a href="/login">login</a>
            <a href="/register">register</a>
            <% } %>
         </div>
      </div>
   </div>