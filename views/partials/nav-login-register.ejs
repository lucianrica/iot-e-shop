<!-- Main navbar -->
<div class="row border-bottom shadow-sm mb-1 sticky-top bg-white">
   <nav class="navbar navbar-expand navbar-light col-md-12 no-gutters">

      <!-- Brand -->
      <div class="col-md-2 text-center">
         <a class="navbar-brand" href="/">
            <img src="/public/img/logo.PNG" width="55" height="35" alt="">
         </a>
      </div>

      <!-- Shop Menu-->
      <div class="col-md-7">
         <div class="pull-right " id="navbarNavDropdown">
            <ul class="navbar-nav">
               <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                     aria-haspopup="true" aria-expanded="false">
                     Shop
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                     <a class="dropdown-item" href="/">Home</a>



                     <% if (user != undefined && user.userType === 1) { %>
                     <hr class="hr-text p-0 m-0">
                     <a class="dropdown-item" href="/items">Add Product</a>
                     <hr class="hr-text p-0 m-0">
                     <a class="dropdown-item" href="/users/<%= user.id %>/items">My Products</a>
                     <% } %>




                  </div>
               </li>
            </ul>
         </div>
      </div>

      <!-- Login Menu -->
      <div class="col-md-2">
         <div class="text-center" id="navbarNavDropdown">
            <ul class="navbar-nav">
               <li class="nav-item dropdown">

                  <!-- Get User Profile Photo if logged in -->
                  <% if (user) { %>
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                     aria-haspopup="true" aria-expanded="true">
                     <img
                        src="<%= user.profilePhoto != undefined ? loggedinUser.profilePhoto : '/public/img/profile-no-photo.png' %>"
                        width="30px" height="30px" style="border-radius: 50px;" />
                  </a>

                  <!-- If not logged in show Login -->
                  <% } else { %>
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                     aria-haspopup="true" aria-expanded="true">
                     SignIn
                  </a>
                  <% } %>
                  
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                     <!-- If logged in show options for account -->
                     <% if (user) { %>
                     <a class="dropdown-item" href="/users">dashboard</a>
                     <hr class="hr-text p-0 m-0">
                     <a class="dropdown-item" href="/logout">logout</a>

                     <!-- If not logged in show Login menu -->
                     <% } else { %>
                     <a class="dropdown-item" href="/login">login</a>
                     <hr class="hr-text p-0 m-0">
                     <a class="dropdown-item" href="/register">register</a>
                     <% } %>
                  </div>
               </li>
            </ul>
         </div>
      </div>


      <div class="col-md-1 d-none d-md-block">
         <a href="#" class="pull-right d-none d-md-block"><i class="fa fa-heart" aria-hidden="true"></i></a>
         <a href="#" class="pull-right ml-2 pr-2 d-none d-md-block"><i class="fa fa-shopping-basket  "
               aria-hidden="true"></i></a>
      </div>


   </nav>
</div>
<!-- Main nav end -->