<%- include ../partials/html-header %>
<% include ../partials/errors %>
<div class="login-form">
   <div class="login-body">
      <a class="login-close-btn" href="/login">&times;</a>
      <h4 class="login-title">Account Recovery</h4>
      <!-- Form -->
      <form class="form-login" action="/login/forgot" method="POST">

         <!-- Manually Sign In -->
         <div class="field-wrapper">
            <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
            <div class="field-placeholder"><span>Enter your email</span></div>
         </div>
         <button type="submit">Send</button>
         <br>
         <br>
         <!-- Sign in with facebook or google -->
         <hr class="hr-text" data-content="or">

         <!-- Link to Account Creation -->
         <br>
         <a class="register-btn" href="/login">Back to Login?</a>
      </form>
   </div>
</div>
<%- include ../partials/html-footer %>