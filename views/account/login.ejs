<%- include ../partials/html-header %>
<img src="/public/img/login.png" class="position-absolute backgroundLogin p-0 m-0 d-none d-lg-block">
</img>


<div class="row mt-4">
   <div class="col-lg-8 col-xl-4 mx-auto">
      <div class="card">
         <div class="card-body">

            <!-- Title & Close Button -->
            <button type="button" class="close" aria-label="Close">
               <a href="/" aria-hidden="true">&times;</a>
            </button>
            <h4 class="card-title text-center w-100 font-weight-bold">LOGIN</h4>

            <!-- Form -->
            <form id="form" class="form-signin" action="/login" method="POST">
               <div class="form-wrapper-outer">
                  <% include ../partials/errors %>

                  <!-- Manually LogIn -->
                  <div class="field-wrapper">
                     <input type="email" id="email" name="email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                     <div class="field-placeholder"><span>Enter your email</span></div>
                  </div>
                  <div class="field-wrapper">
                     <input type="password" id="password" name="password"
                        value="<%= typeof password != 'undefined' ? password : '' %>">
                     <div class="field-placeholder"><span>Enter your password</span></div>
                  </div>
                  <div class="d-flex">
                     <div class="mr-auto small">
                        <p type="" checked="checked" name="remember"></p>
                     </div>
                     <div class=" small">
                        <a id="forgotPassword" href="/login/forgot">Forgot Password?</a>
                     </div>
                  </div>
                  <div class="text-center">
                     <br class="my-4">
                     <button id="loginBtn" class="btn btn-success pl-5 pr-5" type="submit">Log in</button>
                  </div>
                  <br>

                  <!-- Sign in with facebook or google -->
                  <hr class="hr-text" data-content="or">
                     <h6 class="card-title text-center text-muted">Sign in with</h6>
                  
                  <br>
                  <div class="d-flex">
                     <div class="ml-auto mr-2">
                        <a href="/login/google" class="btn fa fa-google"></a>
                     </div>
                     <div class="ml-2 mr-auto">
                        <a href="/login/facebook" class="btn fa fa-facebook"></a>
                     </div>
                  </div>
                  <br>

                  <!-- Link to Account Creation -->
                  <br>
                  <div class="d-flex justify-content-center small">
                     <div class="m-2">
                        <p class="small">Need an Account?</p>
                     </div>
                     <div>
                        <div class="text-center">
                           <a id="registerLink" class="btn btn-success p-1" href="/register">Register</a>
                        </div>
                     </div>
                  </div>

                  <!-- log in accounts premade -->
                  
                  <hr class="hr-text" data-content="Premade Test Accounts">
                  <hr class="hr-text small" data-content="EMAIL: admin@test.com  |  PASSWORD: 123456">
                  <hr class="hr-text small" data-content="EMAIL: email: seller@test  |  PASSWORD:
                     123456">
                  <hr class="hr-text small" data-content="EMAIL: email: shopper@test  |  PASSWORD: 123456">              
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

<%- include ../partials/html-footer %>