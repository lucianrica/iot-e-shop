<!-- Check if loggedin user has clearance to view this page -->
<% if(loggedinUser.userType === 2) { %>
   <%- include ./header %>
   <%- include ./customers-nav %>
   <div class="table-responsive">
      <table class="table table-striped table-sm">
         <thead>
            <tr>
               <th>User Name</th>
               <th>Account Type</th>
               <th>Created On</th>
               <th>User Email</th>
               <th>Account ID</th>
            </tr>
         </thead>
         <tbody>
            <% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>
            <% users.forEach(function(user){ %>
            <% if(user.userType === 1) { %>
            <tr>
               <td class="text-uppercase text-muted small"><a href="/dashboards/admin/edit/<%= user.id %>">
                     <div><%= user.name %></div>
                  </a>
               </td>
            
               <td class="text-uppercase text-muted small">
                  <% if(user.userType === 0) { %>
                  BASIC
                  <% } else if(user.userType === 1) { %>
                  Seller
                  <% } else { %>
                  Admin
                  <% } %>
               </td>
               <td class="text-uppercase text-muted small">
                  <%= user.date.toLocaleDateString("en-GB", options) %>
               </td>
               <td class="text-uppercase text-muted small"><%= user.email %>
               </td>
               <td class="text-muted small"><%= user.id %>
               </td>
            </tr>
            <% } %>
            <% }); %>
         </tbody>
      </table>
   </div>
   <%- include ./footer %>
<% } else { %>
   <%- include ../partials/unauthorised-access %>
<% } %>