<!-- include HTML header for styling and other scripts -->
<% include ../partials/html-header %>
<!-- Temporary buttons -->
<%- include ../nav-bar-temp %>



<div class="container">
   <div class="row">
      <div class="col-lg-10 col-xl-6 mx-auto">
         <div class="card card-signin flex-row my-5">
            <div class="card-body">



               <!-- Title & Close Button -->
               <h4 class="card-title text-center w-100 font-weight-bold"></h4>
               <button type="button" class="close" aria-label="Close">
                  <a href="/" aria-hidden="true">&times;</a>
               </button>
               <h4 class="card-title text-center w-100 font-weight-bold">Register</h4>



               <!-- Form -->
               <form class="form-signin" action="/users/register" method="POST">
                  <div class="form-wrapper-outer">


                     <!-- Hidden Errors div -->
                     <div class="field-wrapper">
                        <% include ../partials/errors %>
                     </div>



                     <!-- Manually Register -->
                     <div class="field-wrapper">
                        <input type="name" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                        <div class="field-placeholder"><span>Enter your full name</span></div>
                     </div>
                     
                     <div class="field-wrapper">
                        <input type="email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                        <div class="field-placeholder"><span>Enter your email</span></div>
                     </div>
                     
                     <div class="field-wrapper">
                        <input type="password" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
                        <div class="field-placeholder"><span>Enter your password</span></div>
                     </div>
                     
                     <div class="field-wrapper">
                        <input type="password" id="confirmPassword" name="confirmPassword"
                           value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
                        <div class="field-placeholder"><span>Confirm your password</span></div>
                     </div>
                     
                     
                     
                     <div class="d-flex">
                        <div class="mr-auto small">
                           <a id="forgotPassword" href="#"></a>
                        </div>
                        <div class=" small">
                           <a id="forgotPassword" href="#">Forgot Password?</a>
                        </div>
                     </div>
                     <div class="text-center">
                        <br class="my-4">
                        <button id="loginBtn" class="btn btn-success pl-5 pr-5" type="submit">Register</button>
                     </div>
                     <br>



                     <!-- Sign in with facebook or google -->
                     <hr class="hr-text" data-content="or">
                     <div class="modal-header text-center">
                        <h6 class="card-title text-center w-100 font-weight-bold">Register with</h6>
                     </div>
                     <br>
                     <div class="d-flex">
                        <div class="ml-auto mr-2">
                           <a href="/users/google" class="btn fa fa-google"></a>
                        </div>
                        <div class="ml-2 mr-auto">
                           <a href="/users/facebook" class="btn fa fa-facebook"></a>
                        </div>
                     </div>
                     <br>



                     <!-- Link to Account Creation -->
                     <hr class="hr-text">
                     <br>
                     <div class="d-flex justify-content-center">
                        <div class="m-2">
                           <p class="pt-2">Want to log in?</p>
                        </div>
                        <div class="m-2">
                           <div class="text-center">
                              <a id="registerLink" class="btn btn-success pl-5 pr-5" href="/users/login">Log in</a>
                           </div>
                        </div>
                     </div>

                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>


<!-- include HTML footer for styling and other scripts -->
<%- include ../partials/html-footer %>