<% include ../partials/html-header %>
<img src="/public/img/test.png" class="position-absolute backgroundLogin p-0 m-0 d-none d-lg-block">
</img>

<div class="row mt-4">
   <div class="col-lg-8 col-xl-4 mx-auto">
      <div class="card">
         <div class="card-body">

            <!-- Title & Close Button -->
            <button type="button" class="close" aria-label="Close">
               <a href="/users/login" aria-hidden="true">&times;</a>
            </button>
            <h4 class="card-title text-center w-100 font-weight-bold">Register</h4>

            <!-- Form -->
            <form class="form-signin" action="/users/register" method="POST">
               <div class="form-wrapper-outer">
                  <% include ../partials/errors %>

                  <!-- Manually Register -->
                  <div class="field-wrapper">
                     <input type="name" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">

                     <div class="field-placeholder"><span>Enter your full name</span></div>
                  </div>

                  <div class="field-wrapper">
                     <input type="email" id="email" name="email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                     <div class="field-placeholder"><span>Enter your email</span></div>
                  </div>

                  <div class="field-wrapper">
                     <input type="password" id="password" name="password"
                        value="<%= typeof password != 'undefined' ? password : '' %>">
                     <div class="field-placeholder"><span>Enter your password</span></div>
                  </div>

                  <div class="field-wrapper">
                     <input type="password" id="confirmPassword" name="confirmPassword"
                        value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
                     <div class="field-placeholder"><span>Confirm your password</span></div>
                  </div>

                  <div class="d-flex">
                     <div class="mr-auto small">
                        <a id="forgotPassword" href="#"></a>
                     </div>
                     <div class=" small">
                        <a id="forgotPassword" href="/users/forgot">Forgot Password?</a>
                     </div>
                  </div>
                  <div class="text-center">
                     <br class="my-4">
                     <button id="loginBtn" class="btn btn-success pl-5 pr-5" type="submit">Register</button>
                  </div>
                  <br>

                  <!-- Sign in with facebook or google -->
                  <hr class="hr-text" data-content="or">
                     <h6 class="card-title text-center text-muted ">Register with</h6>
                  
                  <br>
                  <div class="d-flex">
                     <div class="ml-auto mr-2">
                        <a href="/users/google" class="btn fa fa-google"></a>
                     </div>
                     <div class="ml-2 mr-auto">
                        <a href="/users/facebook" class="btn fa fa-facebook"></a>
                     </div>
                  </div>
                  <br>

                  <!-- Link to Account Creation -->
                  <hr class="hr-text">
                  <br>
                  <div class="d-flex justify-content-center">
                     <div class="m-2 small">
                        <p class="small">Want to log in?</p>
                     </div>
                     <div>
                        <div class="text-center">
                           <a id="registerLink" class="btn btn-success p-1" href="/users/login">Log in</a>
                        </div>
                     </div>
                  </div>

               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<!-- include HTML footer for styling and other scripts -->
<%- include ../partials/html-footer %>