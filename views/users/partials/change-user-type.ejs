<!-- Account Type Settings -->
<div class="col-lg-4">
   <div class="card mb-4 box-shadow">
      <div class="card-body">
         <hr class="hr-text" data-content="Account Settings">
         <form action="/users/edit/<%= user.id %>?_method=PATCH" method="POST">
            <input type="hidden" name="_method" value="PATCH" />
            <% if(loggedinUser.userType === 2) { %>
            <div class="">
               <div class="card-footer">
                  <% if(user.userType === 0) { %>
                  <h6 class="card-title text-center w-100 font-weight-bold">Basic Account</h6>
                  <% } else if(user.userType === 1) { %>
                  <h6 class="card-title text-center w-100 font-weight-bold">Selling Account</h6>
                  <% } else { %>
                  <h6 class="card-title text-center w-100 font-weight-bold">Admin Account</h6>
                  <% } %>


                  <br>



                  <div class="field-wrapper">
                     <select name="userType" class="form-control" size="0">
                        <option value="0">Change to Basic Account</option>
                        <option value="1">Change to Seller Account</option>
                        <option value="2">Change to Admin Account</option>
                     </select>
                  </div>
                  <div class="d-flex justify-content-center">
                     <div>
                        <div class="text-center">
                           <a class="btn btn-secondary m-2 p-1" href="/users/admins/all">Go Back</a>
                        </div>
                     </div>
                     <% if(user.firstName === 'shopper'||user.firstName ==='admin'||user.firstName ==='seller') { %>
                     <p>Cannot Change, <br>protected account</p>
                     <% } else { %>
                     <div>
                        <div class="text-center">
                           <button class="btn btn-warning m-2 p-1" type="submit">Save
                              Settings</button>
                        </div>
                     </div>
                     <% } %>

                  </div>
               </div>
            </div>
            <% } %>
         </form>

      </div>
   </div>
</div>
            
         