<%- include ../partials/html-header %>
<img src="/public/img/flipwave1.png" class="position-absolute backgroundLogin p-0 m-0 d-none d-lg-block">
</img>
<div class="row mt-4">
   <div class="col-lg-8 col-xl-4 mx-auto">
      <div class="card">
         <div class="card-body">

            <!-- Title & Close Button -->
            <button type="button" class="close" aria-label="Close">
               <a href="/users/login" aria-hidden="true">&times;</a>
            </button>
            <h4 class="card-title text-center w-100 font-weight-bold">Password Reset</h4>

            <!-- Form -->
            <form class="form-signin" action="/users/forgot" method="POST">
               <div class="form-wrapper-outer">
                  <% include ../partials/errors %>


                  <!-- Manually Sign In -->
                  <div class="field-wrapper">
                     <input type="email" id="email" name="email"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                     <div class="field-placeholder"><span>Enter your email</span></div>
                  </div>

                  <div class="d-flex">
                     <div class="mr-auto small">
                        <p type="" checked="checked" name="remember"></p>
                     </div>
                     <div class=" small">
                        <a id="forgotPassword" href="/users/login">back to login </a>
                     </div>
                  </div>
                  <div class="text-center">
                     <br class="my-4">
                     <button id="loginBtn" class="btn btn-success pl-5 pr-5" type="submit">Send</button>
                  </div>
                  <br>

                  <!-- Sign in with facebook or google -->
                  <hr class="hr-text" data-content="or">

                  <!-- Link to Account Creation -->
                  <br>
                  <div class="d-flex justify-content-center">
                     <div class="m-2">
                        <p class="small">Need an Account?</p>
                     </div>
                     <div>
                        <div class="text-center">
                           <a id="registerLink" class="btn btn-success p-1" href="/users/register">Register</a>
                        </div>
                     </div>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<%- include ../partials/html-footer %>