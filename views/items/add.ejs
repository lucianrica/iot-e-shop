<%- include ../partials/html-header %>
<h1>Add Product</h1>
<div class="row">
   <div class="col-md-8 col-lg-7 col-xl-10 mx-auto">
      <% include ../partials/errors %>

      <form  action="/items" method="POST">
         <div class="form-row">
            <div class=" mb-3">
               <input type="text" class="form-control" name="title" placeholder="Product Name">               
            </div>                        
         </div>                  
         <div class="form-row">
            <div class=" mb-3">
               <input type="number" class="form-control" name="price" step=".01" placeholder="Price">               
            </div>                        
         </div>
         <div class="form-row">
            <div class=" mb-3">
               <textarea type="text" class="form-control" name="smallIntro" maxlength="150" placeholder="Description up to 150 words"></textarea>              
            </div>                        
         </div>  
         <div class="form-row">
            <div class=" mb-3">
               <textarea type="text" class="form-control" name="details" placeholder="Detailed Description"></textarea>              
            </div>                        
         </div>  
         <div class="form-row">
            <div class=" mb-3">
               <input type="text" class="form-control" name="link" placeholder="http:// link to photo">
            </div>
         </div>
         <button class="btn btn-primary btn-sm" type="submit">Add Product</button>
      </form>     

   </div>
</div>
<%- include ../partials/html-footer %>