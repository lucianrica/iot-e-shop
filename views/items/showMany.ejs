<!-- Product description div -->

<div class="row col-md-12">
   <div class="col-md-2">
   </div>
   <div class="col-md-4 my-3">
      <h5>Discover More Products</h5>
   </div>
</div>
<div class="row">


   <% items.forEach(function(item, index){ %>
      <% if(index > 3) { %>
            <% return; %>
         <% } %>
         <div class="card col-md-5 col-lg-4 col-xl-3 mx-auto mt-1 pt-3">
            <div class="card mb-4 shadow-sm">
               <img src="<%= item.photos[0] != '' ? item.photos[0] : '/public/img/noimg.png' %>" width="100%" height="225" />
               <div class="card-body">
                  <h6 class="overflow-hidden" style="min-height: 50px; max-height: 50px;"><%= item.title %></h6>

                  <div class="d-flex justify-content-between align-items-center">
                     <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                           <a href="/items/showOne/<%= item.id %>">View</a>
                        </button>
                        <% if(user != undefined && user.id === item.user){ %>
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                           <a href="/items/edit/<%= item.id %>">Edit</a>
                        </button>
                        <% } %>
                     </div>
                     <small class="text-muted text-success">â‚¬<%= typeof item.price != 'undefined' ? item.price : '' %>
                     </small>
                  </div>
               </div>
            </div>
         </div>      
   <% }); %>

</div>