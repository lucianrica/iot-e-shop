<%- include ./header %>

<!-- Top div -->
<div class="row mt-5">
   <div class="row col-md-5">
      <div class="col-md-12 p-0">
         <img class="card shadow" src="<%= item.photos[0] != '' ? item.photos[0] : '/public/img/noimg.png' %>"
            alt="product" width="100%" height="305">
      </div>
      <div class="col-md-4 d-none d-lg-block mt-2">
         <img class="card shadow" src="<%= item.photos[1] != '' ? item.photos[1] : '/public/img/noimg.png' %>"
            alt="product" width="100%" height="85">
      </div>
      <div class="col-md-4 d-none d-lg-block mt-2">
