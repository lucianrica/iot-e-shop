<% if(user.userType === 1) { %>
<%- include ../partials/html-header %>
 
<div class="container">
   <!-- edit -->
   <form class="form-signin" action="/items/<%= item.id %>?_method=PATCH" method="POST">
      <input type="hidden" name="_method" value="PATCH" />
      <div class="col-md-12 m-0 p-0">
         <% include ../partials/errors %>
      </div>
      <!-- Title & Price -->
      <div class="row col-md-12 mt-5">
         <div class="col-md-5 mb-4">
            <label for="title">
               <h6>Title</h6>
            </label>
            <input type="text" class="form-control" name="title"
               value="<%= typeof item.title != 'undefined' ? item.title : '' %>">
         </div>
         <div class="col-md-1"></div>
         <div class=" mb-2">
            <label for="price">
               <h6>Price</h6>
            </label>
            <input type="number" class="form-control" name="price" step=".01"
            placeholder="<%= typeof price != 'undefined' ? price : '' %>"
               value="<%= typeof item.price != 'undefined' ? item.price : '' %>">
         </div>
         <div class="col-md-1"></div>
         <div class=" mb-2">
            <label for="quantity">
               <h6>Quantity</h6>
            </label>
            <input type="number" class="form-control" name="quantity"
               value="<%= typeof item.quantity != 'undefined' ? item.quantity : '' %>">
         </div>
      </div>

      <!-- Textarea -->
      <div class="row col-md-12">
         <div class="row col-md-12 mt-5">
            <h6>Sales Pitch</h6>
         </div>
         <div class="col-md-12">
            <textarea type="text" class="form-control" name="salesPitch"
               maxlength="150"><%= item.salesPitch %></textarea>
         </div>
         <div class="row col-md-12 mt-5">
            <h6>More Details</h6>
         </div>
         <div class="col-md-12">
            <textarea type="text" class="form-control" name="details"><%- item.details %></textarea>
         </div>
      </div>

      <!-- Links -->
      <div class="row col-md-12 mt-5">
         <div class="col-md-6 mt-2">
            <input type="text" class="form-control" name="imgOne" placeholder="http:// link to photo 1"
               value="<%= typeof item.photos[0] != 'undefined' ? item.photos[0] : '' %>">
         </div>
         <div class="col-md-6 mt-2">
            <input type="text" class="form-control" name="imgTwo" placeholder="http:// link to photo 2"
               value="<%= typeof item.photos[1] != 'undefined' ? item.photos[1] : '' %>">
         </div>
         <div class="col-md-6 mt-2">
            <input type="text" class="form-control" name="imgThree" placeholder="http:// link to photo 3"
               value="<%= typeof item.photos[2] != 'undefined' ? item.photos[2] : '' %>">
         </div>
         <div class="col-md-6 mt-2">
            <input type="text" class="form-control" name="imgFour" placeholder="http:// link to photo 4"
               value="<%= typeof item.photos[3] != 'undefined' ? item.photos[3] : '' %>">
         </div>
      </div>

      <!-- Add button -->
      <div class="row col-md-12 mt-5">
         <div class="col-md-1"></div>
         <div class="col-md-2">
            <a href="/users/<%= user.id %>/items" class="btn btn-secondary btn-sm" type="submit">Go Back</a>
         </div>
         <div class="col-md-2">
            <button class="btn btn-warning btn-sm" type="submit">Save new Details</button>
         </div>
      </div>
   </form>
   <br>
   <br>
   <!-- Delete -->
   <form class="row" action="/items/<%= item.id%>?_method=DELETE" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <div class="row col-md-12">
         <div class="col-md-1"></div>         
         <div class="col-md-2">
            <button class="btn btn-danger btn-sm" type="submit">Delete Product</button>
         </div>
      </div>  
   </form>
   </div>
 
   <%- include ../partials/html-footer %>
   <script>

      // Editor script
      CKEDITOR.replace('details', {
         enterMode: CKEDITOR.ENTER_BR,
         toolbar: [{ name: 'basicstyles', groups: ['basicstyles'], items: ['Bold', 'Italic', 'Underline', "-", 'TextColor', 'BGColor'] },
         { name: 'styles', items: ['Format'] },
         { name: 'justify', groups: ['blocks', 'align'], items: ['JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'] },
         { name: 'paragraph', groups: ['list', 'indent'], items: ['NumberedList', 'BulletedList', '-'] },
         { name: 'spell', items: ['jQuerySpellChecker'] }
         ],
      });
   </script>
   

<% } else { %>
   <%- include ../partials/unauthorised-access %>
<% } %>






      
         
                
        
         
         
         
         

         
      