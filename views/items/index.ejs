<%- include ./header %>

<!-- Home page for products, we loop trough entire database and output all products -->


   <div class="row mt-5 bg-light">
      <% items.forEach(function(item){ %>
      <div class="card col-md-6 col-lg-5 col-xl-3 mx-auto mb-5 p-0">
         <div class="card shadow-sm">
            <img src="<%= item.photos[0] != '' ? item.photos[0] : '/public/img/noimg.png' %>" width="100%"
               height="225" />            
            <div class="card-body">
               <h5 class="overflow-hidden" style="min-height: 50px; max-height: 50px;"><%= item.title %></h5>
               <p class="card-text" style="min-height: 115px; max-height: 115px;  overflow: hidden;"><%= item.salesPitch %>
               </p>
               <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                     <button type="button" class="btn btn-sm btn-outline-secondary">
                        <a href="/items/showOne/<%= item.id %>">View</a>
                     </button>
                     <% if(user != undefined && user.id === item.user){ %>
                     <button type="button" class="btn btn-sm btn-outline-secondary">
                        <a href="/items/edit/<%= item.id %>">Edit</a>
                     </button>
                     <% } %>
                  </div>
                  <small class="text-muted text-success">â‚¬<%= typeof item.price != 'undefined' ? item.price : '' %>
                  </small>
               </div>
            </div>
         </div>
      </div>
      <% }); %>
   </div>
   

<%- include ./footer %>