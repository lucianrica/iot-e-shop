<!-- 
   Show all products
 -->


<div class="col-md-12 text-muted mt-5">
   <h5>Recommended Products</h5>
</div>
<div class="row mt-3">

   <% allItems.forEach((item) => { %>

   <div class="col-sm-12 col-md-4 col-lg-3 col-xl-3 mx-auto mb-5 px-1">
      <a class="text-dark" href="/items/<%= item.id %>">
         <div class="card p-0 m-0 bg-transparent border">
            <img src="<%= item.photos[0] != '' ? item.photos[0] : '/public/img/noimg.png' %>" width="100%"
               height="250px" />
            <div class="card-body border-top">
               <h6 class="overflow-hidden font-weight-bold" style="min-height: 20px; max-height: 20px;"><%= item.title %>
               </h6>
               <span class="text-success font-weight-bold"><i class="fa fa-eur" ></i ><%= item.price %>
               </span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
               <small class="text-muted"><i class="fa fa-eye pl-3"></i> <%= item.views %>
               </small>
               <!-- ------------------------------------------------------- -->
               <!-- Cheap otion, to be changed -->
               <% if(item.rating >= 5) { %>
               <div class="pr-3">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
               </div>
               <% } else if(item.rating >= 4) { %>
               <div class="pr-3">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
               </div>
               <% } else if(item.rating >= 3) { %>
               <div class="pr-3">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
               </div>
               <% } else if(item.rating >= 2) { %>
               <div class="pr-3">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
               </div>
               <% } else if(item.rating >= 1) { %>
               <div class="pr-3">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
               </div>
               <% } else { %>
               <div class="pr-3">
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
                  <span class="fa fa-star"></span>
               </div>
               <% } %>
   
               
            </div>
         </div>
      </a>
   </div>

   <% }); %>
</div>
<hr class="mt-5" style="border: 2px solid rgb(223, 223, 223);">